<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateQuizWalkActivity"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_clear_myquizplaces"
            android:background="@color/colorAlternativeDarkButton"
            android:src="@android:drawable/ic_menu_delete"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.25"
            android:padding="10dp"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btn_add_myquizplaces"
            android:background="@color/colorAlternativeDarkButton"
            android:src="@android:drawable/ic_menu_add"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.25"
            android:padding="10dp"

            />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btn_settings_myquizplaces"
                android:background="@color/colorAlternativeDarkButton"
                android:src="@android:drawable/ic_menu_preferences"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.25"
                android:padding="10dp"

                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btn_save_myquizplaces"
                android:background="@color/colorAlternativeDarkButton"
                android:src="@android:drawable/ic_menu_save"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.25"
               />





        </LinearLayout>

    </RelativeLayout>
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryLighterDark"
        android:textColor="@color/colorPrimary"
        android:id="@+id/text_view_instruction"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/quizplaces_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="48dp"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>

