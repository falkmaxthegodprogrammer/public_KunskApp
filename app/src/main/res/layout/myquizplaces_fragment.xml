<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CreateQuizWalkActivity"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_clear_myquizplaces"
            android:background="@color/colorAlternativeDarkButton"
            android:src="@android:drawable/ic_menu_delete"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.25"
            android:padding="10dp"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btn_add_myquizplaces"
            android:background="@color/colorAlternativeDarkButton"
            android:src="@android:drawable/ic_menu_add"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.25"
            android:padding="10dp"

            />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btn_settings_myquizplaces"
                android:background="@color/colorAlternativeDarkButton"
                android:src="@android:drawable/ic_menu_preferences"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.25"
                android:padding="10dp"

                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btn_save_myquizplaces"
                android:background="@color/colorAlternativeDarkButton"
                android:src="@android:drawable/ic_menu_save"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.25"
               />





        </LinearLayout>

    </RelativeLayout>
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/text_view_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.5"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:drawable/ic_menu_info_details"
            android:text=""
            android:visibility="visible"
            android:layout_alignRight="@id/text_view_instruction"
            android:layout_alignTop="@id/text_view_instruction"
            android:id="@+id/btn_infotext"/>


    </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/quizplaces_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"></android.support.v7.widget.RecyclerView>

    </LinearLayout>









</LinearLayout>

