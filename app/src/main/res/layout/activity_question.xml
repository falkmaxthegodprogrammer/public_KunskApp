<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <TextView
        android:id="@+id/text_view_active_question_infobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Fråga 1 / 3 på plats"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:padding="16dp"
        android:typeface="normal"
        />

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progress_bar_drawable" />

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:text="Här kommer frågan att stå, hur ser det ut men en något längre fråga?"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:padding="6dp"
        android:typeface="normal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_answer_1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal|center"
            android:text="1"
            android:background="@drawable/bg_quizbutton"
            android:textSize="16sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_answer_2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal|center"
            android:text="Detta är svarsalternativ 1"
            android:textColor="@color/colorAlternativeDarkButton"
            android:background="@drawable/bg_quizbutton"
            android:textSize="16sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="invisible"/>


        <Button
            android:id="@+id/btn_answer_3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal|center"
            android:text="3"
            android:background="@drawable/bg_quizbutton"
            android:textSize="16sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="invisible"/>


        <Button
            android:id="@+id/btn_answer_4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal|center"
            android:textSize="16sp"
            android:text="1"
            android:background="@drawable/bg_quizbutton"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="invisible"/>





    </LinearLayout>







</LinearLayout>